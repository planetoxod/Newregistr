            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="?android:attr/listDivider" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        >

        <TextView
            android:id="@+id/birthday_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_birthday" />

        <EditText
            android:id="@+id/birthday_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="datetime|textEmailAddress"
            android:singleLine="true"
            android:textColor="@color/textStandardBlackBackgroundColor"
            android:textSize="16sp"
            tools:text="ivan_ivanov@mail.ru" />

        <View
            android:id="@+id/divider6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="?android:attr/listDivider" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        >

        <TextView
            android:id="@+id/reg_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_reg_date" />

        <EditText
            android:id="@+id/reg_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="datetime"
            android:singleLine="true"
            android:textColor="@color/textStandardBlackBackgroundColor"
            android:textSize="16sp"
